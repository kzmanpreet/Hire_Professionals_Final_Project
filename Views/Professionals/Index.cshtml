@model IEnumerable<Hire_Professionals_Final_Project.Models.Professional>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


@{
    ViewData["Title"] = "Index";
}

<h1>Professionals</h1>

<p>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("data_admin"))
    {
    <a class="btn btn-secondary" asp-action="Create">+Register A Professional</a>
    }
</p>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card border-info text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <h6 class="card-text">@Html.DisplayFor(modelItem => item.Profession)</h6>
                    <p class="card-text"> Years of experience :@Html.DisplayFor(modelItem => item.ExperienceInYears)</p>

                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">View Profile</a>

                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("data_admin")) {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </div>
            </div>
        </div>




    }
</div>